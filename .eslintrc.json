{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "window": true,
      "document": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-vars": 1,
      "react/react-in-jsx-scope": 0,
      "react/sort-comp": 0,
      "react/no-multi-comp": 1,
      "react/forbid-prop-types": [
        2,
        {
          "forbid": [
            "any",
            "array"
          ]
        }
      ],
      "jsx-a11y/no-static-element-interactions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^@.*"
          ]
        }
      ],
      "import/extensions": 0,
      "no-debugger": 1,
      "no-param-reassign": 1,
      "semi": [
        0,
        "never"
      ],
      "react/jsx-no-bind": 0,
      "jsx-a11y/label-has-for": 0,
      "no-nested-ternary": 0,
      "no-unused-vars": 1,
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-underscore-dangle": [
        0,
        {
          "allow": [
            "__ssoinfo"
          ],
          "allowAfterThis": true,
          "allowAfterSuper": true
        }
      ],
      "guard-for-in": 1,
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "no-restricted-syntax": 1,
      "prefer-template": 1,
      "brace-style": [
        1,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "camelcase": 1,
      "comma-dangle": [
        0,
        "never"
      ],
      "comma-spacing": [
        0,
        {
          "before": false,
          "after": true
        }
      ],
      "comma-style": [
        1,
        "last"
      ],
      "consistent-this": [
        1,
        "self"
      ],
      "curly": [
        2,
        "multi-line"
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "eol-last": 1,
      "indent": [
        1,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": 0,
      "new-cap": [
        1,
        {
          "capIsNew": false,
          "newIsCap": true
        }
      ],
      "new-parens": 0,
      "no-bitwise": 0,
      "no-cond-assign": 1,
      "no-console": 0,
      "no-constant-condition": 1,
      "no-delete-var": 2,
      "no-dupe-keys": 1,
      "no-duplicate-case": 1,
      "no-empty-character-class": 1,
      "no-eval": 1,
      "no-ex-assign": 1,
      "no-extend-native": 1,
      "no-floating-decimal": 1,
      "no-func-assign": 1,
      "no-implied-eval": 1,
      "no-inner-declarations": 1,
      "no-invalid-regexp": 1,
      "no-irregular-whitespace": 1,
      "no-iterator": 1,
      "no-labels": 1,
      "no-lonely-if": 1,
      "no-loop-func": 1,
      "no-mixed-spaces-and-tabs": 1,
      "no-native-reassign": 2,
      "no-negated-in-lhs": 1,
      "no-new-func": 1,
      "no-new-object": 1,
      "no-new-wrappers": 2,
      "no-obj-calls": 1,
      "no-octal": 1,
      "no-proto": 2,
      "no-redeclare": 1,
      "no-return-assign": 1,
      "no-self-compare": 1,
      "no-sequences": 1,
      "no-script-url": 0,
      "no-shadow": 0,
      "no-spaced-func": 1,
      "no-sparse-arrays": 1,
      "no-throw-literal": 1,
      "no-trailing-spaces": 1,
      "no-undef": 1,
      "no-undefined": 0,
      "no-undef-init": 1,
      "no-unreachable": 1,
      "no-use-before-define": [
        1,
        "nofunc"
      ],
      "no-warning-comments": [
        0,
        {
          "terms": [
            "todo",
            "fixme"
          ]
        }
      ],
      "no-confusing-arrow": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "max-len": [
        "error",
        200
      ],
      "quotes": [
        1,
        "single"
      ],
      "quote-props": [
        0,
        "as-needed"
      ],
      "radix": 1,
      "space-before-blocks": [
        1,
        "always"
      ],
      "space-infix-ops": 1,
      "space-in-parens": [
        1,
        "never"
      ],
      "space-unary-ops": [
        1,
        {
          "words": true,
          "nonwords": false
        }
      ],
      "use-isnan": 1,
      "valid-typeof": 1,
      "vars-on-top": 0, // disabled for now, see github.com/eslint/eslint/issues/2099
      "wrap-iife": [
        1,
        "inside"
      ],
      "yoda": 0,
      // Node.js specific
      "handle-callback-err": [
        1,
        "^(err|error)$"
      ],
      "no-mixed-requires": 1,
      "no-new-require": 1,
      "no-path-concat": 1,
      // React
      "react/jsx-boolean-value": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-sort-props": 0,
      "react/jsx-uses-react": 1,
      "react/no-did-update-set-state": 1,
      "react/no-unknown-property": 1,
      "react/jsx-wrap-multilines": 0,
      "no-continue": 0,
      "no-void": 0
    }
  }